<Window x:Class="UbiDisplays.Interface.Controls.HintForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ubicontrols="clr-namespace:UbiDisplays.Interface.Controls"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        WindowStyle="None"
        ResizeMode="NoResize"
        IsHitTestVisible="False"
        ShowActivated="False"
        Opacity="0.9"
        Title="Monitor Hint" Height="100" Width="160" Icon="/UbiDisplays;component/Interface/Images/monitor.png">
    <Grid>
        <ubicontrols:Monitor>
            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="32" Foreground="White">Screen</Label>
        </ubicontrols:Monitor>
    </Grid>
</Window>
